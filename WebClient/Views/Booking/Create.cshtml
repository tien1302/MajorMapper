@using BAL.DTOs.Slots;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model BAL.DTOs.Bookings.CreateBooking

@{
    ViewData["Title"] = "Thêm tài khoản";
    Layout = "_BookingLayout";
}
<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">   
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <h1>Đặt lịch</h1>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="reviews">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <form asp-action="Create" id="add-department" class="add-department">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input asp-for="PlayerId" type="hidden" class="form-control" value="@Accessor.HttpContext.Session.GetInt32("AccountId")" />
                                            <input asp-for="SlotId" type="hidden" class="form-control" value="@((ViewData["SlotBooking"] as GetSlot)?.Id)" />
                                            <div class="form-group">
                                                <label class="control-label">Slot</label>
                                                <input class="form-control" readonly value="@((ViewData["SlotBooking"] as GetSlot)?.StartDateTime)" />
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Tiền</label>
                                                <input  class="form-control" readonly value="50.000đ"/>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" value="Create" class="btn btn-primary waves-effect waves-light">Xác nhận</button>
                                                <a asp-action="Index">Quay lại</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}