@model BAL.DTOs.Accounts.ResetPassword
@{
    ViewData["Title"] = "ResetPassword";
}
<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <h1>Đổi mật khẩu</h1>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="reviews">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <form asp-action="ResetPassword" id="add-department" class="add-department">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input asp-for="Id" type="hidden" class="form-control" value="@Context.Session.GetInt32("AccountId")" />
                                            <div class="form-group">
                                                <label asp-for="OldPassword" class="control-label">Mật khẩu cũ</label>
                                                <input asp-for="OldPassword" class="form-control"  required title="Không được để trống" />
                                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Password" class="control-label">Mật khẩu mới</label>
                                                <input asp-for="Password" class="form-control" required title="Không được để trống" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu mới</label>
                                                <input asp-for="ConfirmPassword" class="form-control" required title="Không được để trống" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" value="Save" class="btn btn-primary waves-effect waves-light">Xác nhận</button>
                                                <a asp-action="Index">Quay lại</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
