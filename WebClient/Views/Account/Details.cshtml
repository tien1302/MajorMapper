@using BAL.DTOs.TestResults;
@using DAL.Models;
@model BAL.DTOs.Accounts.GetAccount

@{
    ViewData["Title"] = "Thông tin tài khoản";
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Thành công!</strong> @TempData["AlertMessage"]
    </div>
}
@if (TempData["AlertMessageError"] != null)
{
    <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Cảnh báo!</strong> @TempData["AlertMessageError"]
    </div>
}
<style>
    strong{
       /*  margin-left: 80px; */
    }
</style>
<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        @if (Model.RoleName == "Player")
        {
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="profile-info-inner">
                        <div class="profile-img">
                            @if (Model.Gender == "Nam")
                            {
                                <img src="~/img/avatar_male.jpg" />
                            }
                            else
                            {
                                <img src="~/img/avatar_female.jpg" />
                            }

                        </div>
                        <div class="profile-details-hr">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Họ và tên:</b> @Html.DisplayFor(model => model.Name)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Ngày sinh:</b> @Html.DisplayFor(model => model.DoB)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Giới tính:</b> @Html.DisplayFor(model => model.Gender)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Email:</b> @Html.DisplayFor(model => model.Email)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Số điện thoại:</b> @Html.DisplayFor(model => model.Phone)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div>
                                        <p><b>Địa chỉ:</b> @Html.DisplayFor(model => model.Address)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="margin-left:10px;" onclick="history.back()">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="product-payment-inner-st res-mg-t-30 analysis-progrebar-ctn">
                        <div id="myTabContent" class="tab-content custom-product-edit st-prf-pro">
                            @foreach (GetTestResult item in ViewBag.TestResults)
                            {
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="review-content-section">
                                                <div class="row mg-b-15">
                                                    <div class="col-lg-12">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div>
                                                                    <h1>Kết quả</h1>
                                                                </div>
                                                                <div class="skill-title">
                                                                    <h2>Phương pháp: Tom Holland</h2>
                                                                    <hr />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value1 = @item.getScores.Where(q => q.PersonalityTypeId == 1).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Kỹ thuật</h2>
                                                            <h2><span>@value1</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value1%;" class="progress-bar progress-red"></div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value2 = @item.getScores.Where(q => q.PersonalityTypeId == 2).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Nghiên cứu </h2>
                                                            <h2><span>@value2</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value2%;" class="progress-bar progress-orange"></div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value3 = @item.getScores.Where(q => q.PersonalityTypeId == 3).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Nghệ thuật</h2>
                                                            <h2><span>@value3</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value3%;" class="progress-bar progress-yellow"></div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value4 = @item.getScores.Where(q => q.PersonalityTypeId == 5).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Xã hội</h2>
                                                            <h2><span>@value4</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value4%;" class="progress-bar progress-green"></div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value5 = @item.getScores.Where(q => q.PersonalityTypeId == 6).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Quản lý</h2>
                                                            <h2><span>@value5</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value5%;" class="progress-bar progress-blue"></div>
                                                            </div>
                                                        </div>
                                                        <div class="progress-skill">
                                                            @{
                                                                int value6 = @item.getScores.Where(q => q.PersonalityTypeId == 7).Select(s => s.Result).FirstOrDefault() * 10;
                                                            }
                                                            <h2>Nghiệp vụ</h2>
                                                            <h2><span>@value6</span>%</h2>
                                                            <div class="progress progress-mini">
                                                                <div style="width: @value6%;" class="progress-bar progress-purple"></div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.RoleName == "Consultant")
        {
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-payment-inner-st">
                        <h1>Thông tin tài khoản</h1>
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="reviews">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                                <div style="text-align:center; margin-top:40px;" class="profile-img">
                                                    @if (Model.Gender == "Nam")
                                                    {
                                                        <img style="width:250px;" src="~/img/avatar_male.jpg" />
                                                    }
                                                    else
                                                    {
                                                        <img style="width:250px;" src="~/img/avatar_female.jpg" />
                                                    }

                                                </div>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0">Họ và tên:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Name)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0"> Email:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Email)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0">Ngày sinh:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.DoB)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0">Giới tính:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Gender)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0">Số điện thoại:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Phone)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <strong class="mb-0">Địa chỉ:</strong>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Address)</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <a style="margin-left:10px;" onclick="history.back()">Quay lại</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>