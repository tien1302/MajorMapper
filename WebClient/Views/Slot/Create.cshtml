@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model BAL.DTOs.Slots.CreateSlot

@{
    ViewData["Title"] = "Create";
}

<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <h1>Thêm lịch</h1>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="reviews">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">

                                        <form asp-action="Create" id="add-department" class="add-department">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="ConsultantId" class="control-label">mã</label>
                                                <input asp-for="ConsultantId" class="form-control" value="@Accessor.HttpContext.Session.GetInt32("AccountId")" />
                                                <span asp-validation-for="ConsultantId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Date" class="control-label">Ngày/Tháng/Năm</label>
                                                <input type="date"  asp-for="Date" class="form-control" />
                                                <span asp-validation-for="Date" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="StartDateTime" class="control-label">Slot</label>
                                                <input type="time" asp-for="StartDateTime" class="form-control" />
                                                <span asp-validation-for="StartDateTime" class="text-danger"></span>
                                            </div>
                                            
                                            <div class="form-group">
                                                <button type="submit" value="Create" class="btn btn-primary waves-effect waves-light">Xác nhận</button>
                                                <a asp-action="Index">Quay lại</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
