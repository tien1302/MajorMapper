<div class="calender-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#addSlot">
                    Thêm lịch
                </button>
                <div class="calender-inner">
                    <div id='calendar'></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

<script>
    //checkbox
    $(document).ready(function () {
        $('#checkbox-allday').change(function () {
            if (this.checked) {
                $('#slot-box').hide();
            }
            else {
                $('#slot-box').show();
            }
        });
    });

    //calendar
    document.addEventListener('DOMContentLoaded', function () {
        var Data1 = [];
        var array = @Html.Raw(Json.Serialize(ViewData["Slots"] as List<GetSlot>));
        for (var i = 0; i < array.length; i++) {
            if (array[i].status == "Finish") {
                Data1.push({
                    'id': array[i].id,
                    'title': 'Hoàn thành',
                    'start': array[i].startDateTime,
                    'end': array[i].endDateTime,
                    'color': '#a8a7a7'
                });
            } else if (array[i].status == "Booking") {
                Data1.push({
                    'id': array[i].id,
                    'title': 'Đã được đặt',
                    'start': array[i].startDateTime,
                    'end': array[i].endDateTime,
                    'color': '#FF5722'
                });
            } else {
                Data1.push({
                    'id': array[i].id,
                    'title': 'Chưa đặt',
                    'start': array[i].startDateTime,
                    'end': array[i].endDateTime
                });
            }

        }
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'timeGridWeek',
            expandRows: true,
            slotMinTime: '07:00:00',
            slotMaxTime: '21:00:00',
            slotDuration: '01:00',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
            },
            buttonText: {
                today: 'hôm nay',
                month: 'tháng',
                week: 'tuần',
                day: 'ngày'
            },

            locale: 'vi',
            navLinks: true, // can click day/week names to navigate views
            selectMirror: true,
            eventClick: function (arg) {
                var tilte = arg.event.title;
                var id = arg.event.id;
                if (tilte == 'Đã được đặt') {
                   
                    window.open(`/slot/lobby?bookingId=${id}`);
                } 
                else if (tilte == 'Chưa đặt') {
                    if (confirm('Bạn có đồng ý xóa slot này không?')) {
                        var id = arg.event.id;
                        $.ajax({
                            url: "/Slot/Delete",
                            type: "POST",
                            data: { id: id },
                            success: function () {
                                arg.event.remove();
                            }
                        })
                    }
                }
            },
            events: Data1
        });

        calendar.render();
    });

</script>