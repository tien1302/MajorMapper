@model IEnumerable<BAL.DTOs.PersonalityTypes.GetPersonalityType>

@{
    ViewData["Title"] = "Danh sách tính cách";
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Thành công!</strong> @TempData["AlertMessage"]
    </div>
}
@if (TempData["AlertMessageError"] != null)
{
    <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Cảnh báo!</strong> @TempData["AlertMessageError"]
    </div>
}
<!-- Static Table Start -->
<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1>Danh sách tính cách</h1>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            @if (@Context.Session.GetString("Role") == "Admin")
                            {
                                <div id="toolbar">
                                    <a class="btn btn-primary waves-effect waves-light" asp-action="Create">Thêm tính cách</a>
                                </div>
                            }
                            <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-key-events="true" data-resizable="true" data-cookie="true"
                                   data-cookie-id-table="saveId" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>

                                        <th data-field="name" data-sortable="true">
                                            Tên tính cách
                                        </th>
                                        <th data-field="des" data-sortable="true">
                                            Mô tả
                                        </th>
                                        <th data-field="date" data-sortable="true">
                                            Phương pháp
                                        </th>
                                        @if (@Context.Session.GetString("Role") == "Admin")
                                        {
                                            <th></th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MethodName)
                                            </td>
                                            @if (@Context.Session.GetString("Role") == "Admin")
                                            {
                                                <td>
                                                    <a href="@Url.Action("Update", new {id=item.Id})" title="Sửa" class="btn btn-default">
                                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>

                                                </td>
                                            }
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Static Table End -->